
@import 'nib'

*
  margin: 0
  padding: 0

html, body
  height: 100%

body
  background-color: #f5f5f5
  overflow: hidden
  transition: background-color 0.2s ease-in-out

  &.nightmode
    background-color: #0a0a0a

    .moon
      fill: #fff

      &:hover
        background-color: #fefefe
        fill: #000

#container
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.moon
  position: fixed
  top: 0rem
  left: 0rem
  width: 1.25rem
  height: 1.25rem
  padding: 1rem
  cursor: pointer
  transition: background-color 0.2s ease-in-out;

  &:hover
    background-color: #0a0a0a
    fill: #fff

@media (max-width: 1024px)
  .moon
    width: 1rem
    height: 1rem
  .ribbon
    transform: scale(.75)
    transform-origin: 100% 0

@media (max-width: 640px)
  .moon
    width: 1rem
    height: 1rem
  .ribbon
    transform: scale(.5)
    transform-origin: 100% 0
